<div class='col-md-4'>
  <%= simple_form_for [@project, @ticket] do |f| %>
    <% if @ticket.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@ticket.errors.count, "error") %>
       prohibited this ticket from being saved:</h2>

       <ul>
       <% @ticket.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
       </ul>
     </div>
    <% end %>

    <%= f.input :title %>
    <%= f.input :description %>
    <h3>Supporting Files</h3>
    <%= f.simple_fields_for :assets do |ff| %>
      <%= ff.input :asset, as: :file, label: "File ##{ff.index + 1}" %>
      <%= ff.input :asset_cache, as: :hidden %>
    <% end %>

    <%= f.button :submit, class: 'btn-primary' %>
  <% end %>
</div>
